{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend",
      "program": "${workspaceFolder}/packages/backend/src/main.ts",
      "preLaunchTask": "pnpm run backend:build",
      "outFiles": ["${workspaceFolder}/packages/backend/dist/**/*.js"],
      "envFile": "${workspaceFolder}/packages/backend/.env.development.local",
      "sourceMaps": true,
      "outputCapture": "std",
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "runtimeVersion": "21.7.0",
      "runtimeArgs": [
        "--no-warnings",
        "--loader",
        "ts-node/esm",
        "--experimental-specifier-resolution=node"
      ]
    }
  ]
}
