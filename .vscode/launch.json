{
  "version": "2.0.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Backend",
      "program": "${workspaceFolder}/packages/backend/src/index.ts",
      "preLaunchTask": "tsc: build - packages/backend/tsconfig.json",
      "outFiles": ["${workspaceFolder}/packages/backend/dist/**/*.js"],
      "sourceMaps": true,
      "runtimeArgs": [
        "--no-warnings",
        "--loader",
        "ts-node/esm",
        "--experimental-specifier-resolution=node"
      ]
    }
  ]
}
