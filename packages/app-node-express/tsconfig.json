{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "baseUrl": "./src",
    "paths": {
      "@org/app-node-express/*": ["*"],
      "@org/lib-commons": ["../../lib-commons/src"],
      "@org/lib-api-client": ["../../lib-api-client/src"],
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/logs", "test/**"],

  "references": [
    {
      "path": "../lib-commons"
    },
    {
      "path": "../lib-api-client"
    }
  ]
}
