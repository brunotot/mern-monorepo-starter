{
  "extends": "../../tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    // Tell ts-node CLI to install the --loader automatically, explained below
    "esm": true,
    "compilerOptions": {
      "module": "ESNext"
    },
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "types": [],

    "baseUrl": "./src",
    "paths": {
      "@org/backend/*": ["*"],
      "@org/shared": ["../../shared/dist/src/index"],
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/logs", "test/**"],

  "references": [
    {
      "path": "../shared"
    }
  ]
}
