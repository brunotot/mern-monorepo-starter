{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@utils": ["./src/utils/index"],
      "@utils/*": ["./src/utils/*"],
      "@errors": ["./src/errors/index"],
      "@errors/*": ["./src/errors/*"],
      "@config": ["./src/config/index"],
      "@config/*": ["./src/config/*"],
      "@decorators": ["./src/decorators/index"],
      "@decorators/*": ["./src/decorators/*"],
      "@models": ["src/models/index"],
      "@models/*": ["src/models/*"],
      "@infrastructure": ["./src/infrastructure/index"],
      "@infrastructure/*": ["./src/infrastructure/*"],
      "@web": ["./src/web/index"],
      "@web/*": ["./src/web/*"],
      "@org/shared": ["../shared/src"],
      "@org/shared/*": ["../shared/src/*"]
    }
  }
}
