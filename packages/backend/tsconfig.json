{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": [],
    "esModuleInterop": true,
    "moduleResolution": "Node",

    "baseUrl": "./src",
    "paths": {
      "@org/backend/*": ["*"],
      "@org/shared": ["../../shared/src"],
      "*": ["../node_modules/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/logs", "test/**"],

  "references": [
    {
      "path": "../shared"
    }
  ]
}
