{
  "name": "mern-monorepo-starter",
  "version": "0.0.1",
  "description": "mern-monorepo-starter description",
  "main": "index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": ">=8.15.7"
  },
  "scripts": {
    "prepare": "husky && pnpm --filter shared run build",
    "test": "pnpm run -r test",
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "typedoc": "typedoc && pnpm run script:customizeTypedocOutput",
    "lint": "npx eslint . --fix",
    "backend:build": "pnpm --filter backend run build",
    "script:customizeTypedocOutput": "bash scripts/customizeTypedocOutput.sh",
    "script:writeDependenciesMarkdown": "node scripts/writeDependenciesMarkdown.js",
    "script:writeReadmeMarkdown": "node scripts/writeReadmeMarkdown.js"
  },
  "author": "Bruno Tot",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "cross-dirname": "^0.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "markdown-toc": "^1.2.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.25.12",
    "typedoc-material-theme": "^1.0.2",
    "typedoc-plugin-custom-tags": "^1.0.2",
    "typedoc-plugin-remove-references": "^0.0.6",
    "typedoc-theme-hierarchy": "^4.0.0"
  },
  "keywords": [
    "monorepo",
    "starter",
    "template",
    "mern",
    "railway",
    "react",
    "mongodb",
    "express",
    "node"
  ]
}
