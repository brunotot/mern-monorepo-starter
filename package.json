{
  "name": "mern-monorepo-starter",
  "version": "0.0.1",
  "description": "mern-monorepo-starter description",
  "author": "Bruno Tot",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "engines": {
    "pnpm": ">=8.15.7"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "npm run app-node-express:test && npm run app-vite-react:test && npm run lib-commons:test && npm run lib-api-client:test",
    "build": "npm run lib-commons:build && npm run lib-api-client:build && npm run app-node-express:build && npm run app-vite-react:build",
    "clean": "rm -rf docs && npm run app-node-express:clean && npm run app-vite-react:clean && npm run lib-commons:clean && npm run lib-api-client:clean",
    "reinstall": "rm -rf node_modules packages/mern-sample-app/app-node-express/node_modules packages/mern-sample-app/app-vite-react/node_modules packages/mern-sample-app/lib-commons/node_modules packages/mern-sample-app/lib-api-client/node_modules && npx pnpm i",
    "lint": "npm run app-node-express:lint && npm run app-vite-react:lint && npm run lib-commons:lint && npm run lib-api-client:lint",
    "writeTypedoc": "bash assets/sh/typedoc.sh",
    "app-node-express:start": "npm run start --prefix packages/mern-sample-app/app-node-express",
    "app-node-express:dev": "npm run start --prefix packages/mern-sample-app/app-node-express",
    "app-node-express:test": "npm run test --prefix packages/mern-sample-app/app-node-express",
    "app-node-express:build": "npm run build --prefix packages/mern-sample-app/app-node-express",
    "app-node-express:clean": "npm run clean --prefix packages/mern-sample-app/app-node-express",
    "app-node-express:lint": "npm run lint --prefix packages/mern-sample-app/app-node-express",
    "app-vite-react:start": "npm run start --prefix packages/mern-sample-app/app-vite-react",
    "app-vite-react:dev": "npm run dev --prefix packages/mern-sample-app/app-vite-react",
    "app-vite-react:test": "npm run test --prefix packages/mern-sample-app/app-vite-react",
    "app-vite-react:build": "npm run build --prefix packages/mern-sample-app/app-vite-react",
    "app-vite-react:clean": "npm run clean --prefix packages/mern-sample-app/app-vite-react",
    "app-vite-react:lint": "npm run lint --prefix packages/mern-sample-app/app-vite-react",
    "lib-commons:lint": "npm run lint --prefix packages/mern-sample-app/lib-commons",
    "lib-commons:build": "npm run build --prefix packages/mern-sample-app/lib-commons",
    "lib-commons:test": "npm run test --prefix packages/mern-sample-app/lib-commons",
    "lib-commons:clean": "npm run clean --prefix packages/mern-sample-app/lib-commons",
    "lib-api-client:lint": "npm run lint --prefix packages/mern-sample-app/lib-api-client",
    "lib-api-client:build": "npm run build --prefix packages/mern-sample-app/lib-api-client",
    "lib-api-client:test": "npm run test --prefix packages/mern-sample-app/lib-api-client",
    "lib-api-client:clean": "npm run clean --prefix packages/mern-sample-app/lib-api-client"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.26.6",
    "typedoc-github-theme": "^0.1.2",
    "typedoc-plugin-remove-references": "^0.0.6",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5"
  },
  "keywords": [
    "monorepo",
    "starter",
    "template",
    "mern",
    "railway",
    "react",
    "mongodb",
    "express",
    "node"
  ]
}
