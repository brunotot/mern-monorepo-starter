{
  "name": "mern-monorepo-starter",
  "version": "0.0.1",
  "description": "mern-monorepo-starter description",
  "author": "Bruno Tot",
  "license": "MIT",
  "main": "index.js",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "pnpm": ">=8.15.7"
  },
  "scripts": {
    "prepare": "npm run build --prefix packages/shared",
    "test": "npm run backend:test && npm run frontend:test && npm run shared:test",
    "clean": "npm run backend:clean && npm run frontend:clean && npm run shared:clean",
    "build": "npm run backend:build && npm run frontend:build && npm run shared:build",
    "lint": "npm run backend:lint && npm run frontend:lint && npm run shared:lint",
    "script:typedoc": "bash assets/sh/typedoc.sh",
    "script:writeReadmeMarkdown": "node assets/js/writeReadmeMarkdown.js",
    "script:printRepoTreeStructure": "bash assets/sh/printRepoTreeStructure.sh",
    "backend:lint": "npm run lint --prefix packages/backend",
    "backend:build": "npm run build --prefix packages/backend",
    "backend:test": "npm run test --prefix packages/backend",
    "backend:clean": "npm run clean --prefix packages/backend",
    "backend:start": "npm run start --prefix packages/backend",
    "frontend:lint": "npm run lint --prefix packages/frontend",
    "frontend:build": "npm run build --prefix packages/frontend",
    "frontend:test": "npm run test --prefix packages/frontend",
    "frontend:clean": "npm run clean --prefix packages/frontend",
    "frontend:start": "npm run start --prefix packages/frontend",
    "shared:lint": "npm run lint --prefix packages/shared",
    "shared:build": "npm run build --prefix packages/shared",
    "shared:test": "npm run test --prefix packages/shared",
    "shared:clean": "npm run clean --prefix packages/shared"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint": "^8.56.0",
    "@types/jest": "^29.5.12",
    "cross-dirname": "^0.1.0",
    "markdown-toc": "^1.2.0",
    "prettier": "^3.2.5",
    "tsc-alias": "^1.8.8",
    "typedoc": "^0.26.6",
    "typedoc-github-theme": "^0.1.2",
    "typedoc-plugin-remove-references": "^0.0.6"
  },
  "keywords": [
    "monorepo",
    "starter",
    "template",
    "mern",
    "railway",
    "react",
    "mongodb",
    "express",
    "node"
  ]
}
