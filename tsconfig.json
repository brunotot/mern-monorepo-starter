{
  "exclude": ["node_modules", "dist", "docs"],
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false,
    "types": [],
    "jsx": "react",
    "noEmit": false
  }
}
