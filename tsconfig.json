{
  "include": ["packages/backend/src", "packages/frontend/src", "packages/shared/src"],
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strictPropertyInitialization": false,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": ".",
    "paths": {
      "@utils": ["./packages/backend/src/utils/index"],
      "@utils/*": ["./packages/backend/src/utils/*"],
      "@errors": ["./packages/backend/src/errors/index"],
      "@errors/*": ["./packages/backend/src/errors/*"],
      "@config": ["./packages/backend/src/config/index"],
      "@config/*": ["./packages/backend/src/config/*"],
      "@decorators": ["./packages/backend/src/decorators/index"],
      "@decorators/*": ["./packages/backend/src/decorators/*"],
      "@models": ["./packages/backend/src/models/index"],
      "@models/*": ["./packages/backend/src/models/*"],
      "@infrastructure": ["./packages/backend/src/infrastructure/index"],
      "@infrastructure/*": ["./packages/backend/src/infrastructure/*"],
      "@web": ["./packages/backend/src/web/index"],
      "@web/*": ["./packages/backend/src/web/*"],
      "@org/shared": ["./packages/shared/src"],
      "@org/shared/*": ["./packages/shared/src/*"]
    }
  }
}
